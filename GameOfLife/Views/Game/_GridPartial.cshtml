@model GameOfLife.Models.Grid

<table>
    @for (int i = 0; i < Model.Rows; i++)
    {
        <tr>
            @for (int j = 0; j < Model.Columns; j++)
            {
                <td>
                    <form asp-action="ToggleCell" method="post">
                        <input type="hidden" name="row" value="@i" />
                        <input type="hidden" name="col" value="@j" />
                        <button type="submit" style="width: 20px; height: 20px; background-color:@(Model.Cells[i, j].IsAlive ? "black" : "white")">
                        </button>
                    </form>
                </td>
            }
        </tr>
    }
</table>
